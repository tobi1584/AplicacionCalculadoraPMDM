<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".conversores.Tiempo"
    android:background="@color/backGroundColor">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tiempo_tittle"
            android:textSize="30sp"
            android:textStyle="bold"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95">

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cleanAllButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/all_clean1"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="90dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_background"
                android:contentDescription="@string/delete"
                android:src="@drawable/icono_borrar"
                android:layout_margin="5px"></ImageButton>

            <Button
                android:id="@+id/percentButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/percent"
                android:textColor="@color/orangeDisabled"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px">
            </Button>

            <Button
                android:id="@+id/divideButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/divide"
                android:textColor="@color/orangeDisabled"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number7"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/number_7"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>

            <Button
                android:id="@+id/number8"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/number_8"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>

            <Button
                android:id="@+id/number9"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/number_9"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>

            <Button
                android:id="@+id/multiplyButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/multiply"
                android:textColor="@color/orangeDisabled"
                android:textSize="30sp"
                app:cornerRadius="15dp"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number4"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/number_4"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>

            <Button
                android:id="@+id/number5"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/number_5"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>

            <Button
                android:id="@+id/number6"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/number_6"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>

            <Button
                android:id="@+id/minusButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/minus"
                android:textColor="@color/orangeDisabled"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number1"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5px"
                android:backgroundTint="@color/white"
                android:text="@string/number_1"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"></Button>

            <Button
                android:id="@+id/number2"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/number_2"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>

            <Button
                android:id="@+id/number3"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/number_3"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>

            <Button
                android:id="@+id/plusButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/plus"
                android:textColor="@color/orangeDisabled"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number00"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/number_00"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"/>

            <Button
                android:id="@+id/number0"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/number_0"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>

            <Button
                android:id="@+id/dotButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/dot"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>

            <Button
                android:id="@+id/equalsButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/white"
                android:text="@string/equals"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:cornerRadius="15dp"
                android:layout_margin="5px"></Button>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/seleccion1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner1"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/unidadOrigen"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193"
        tools:text="@string/number_0" />

    <TextView
        android:id="@+id/seleccion2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner1"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <EditText
        android:id="@+id/unidadDestino"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415"
        tools:text="@string/number_0" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backGroundColor"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintBottom_toTopOf="@+id/seleccion1"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127" />

</androidx.constraintlayout.widget.ConstraintLayout>